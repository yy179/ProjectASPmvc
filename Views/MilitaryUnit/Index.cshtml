@model IEnumerable<ProjectLibrary.Models.MilitaryUnitEntity>

@{
    ViewData["Title"] = "Military Units";
}

<h1>Military Units</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact Person</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model)
        {
            <tr>
                <td>@unit.Name</td>
                <td>@unit.ContactPersonId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@unit.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@unit.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@unit.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>