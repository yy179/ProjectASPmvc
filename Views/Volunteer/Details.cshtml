@model ProjectLibrary.Models.VolunteerEntity

@{
    ViewBag.Title = "Volunteer Details";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Volunteer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Biography)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Biography)
        </dd>
    </dl>
</div>

<h4>Requests</h4>
<table class="table">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in ViewBag.Requests)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.ShortDescription</td>
                <td>@request.IsActive</td>
                <td>
                    <form asp-action="CompleteRequest" method="post" style="display:inline;">
                        <input type="hidden" name="requestId" value="@request.Id" />
                        <button type="submit" class="btn btn-success">Complete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
