@model ProjectLibrary.Models.VolunteerEntity

@{
    ViewBag.Title = "Delete Volunteer";
}

<h2>Delete Volunteer</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">Biography</dt>
        <dd class="col-sm-10">@Model.Biography</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
