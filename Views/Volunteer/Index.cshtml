@model IEnumerable<ProjectLibrary.Models.VolunteerEntity>

@{
    ViewBag.Title = "Volunteers";
}

<h2>Volunteers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Volunteer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var volunteer in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@volunteer.Id">@volunteer.Name</a>
                </td>
                <td>@volunteer.DateOfBirth.ToShortDateString()</td>
                <td>@volunteer.City</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@volunteer.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@volunteer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
