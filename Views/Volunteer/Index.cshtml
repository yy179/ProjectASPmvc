@using ProjectLibrary.Models
@model List<VolunteerEntity>

<h2>Volunteers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var volunteer in Model)
        {
            <tr>
                <td>@volunteer.Name</td>
                <td>@volunteer.City</td>
                <td>
                    <a asp-action="Details" asp-route-id="@volunteer.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@volunteer.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@volunteer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Volunteer</a>
