@using ProjectLibrary.Models
@model RequestEntity

<h2>Детали заявки</h2>

<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Краткое описание
        </dt>
        <dd class="col-sm-10">Серверов
            @Model.ShortDescription
        </dd>
        <dt class="col-sm-2">
            Полное описание
        </dt>
        <dd class="col-sm-10">
            @Model.LongDescription
        </dd>
        <dt class="col-sm-2">
            Дата подачи
        </dt>
        <dd class="col-sm-10">
            @Model.SubmissionDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Срок выполнения
        </dt>
        <dd class="col-sm-10">
            @Model.DueDate?.ToShortDateString() ?? "Не указана"
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Активная" : "Выполнена")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
