@using ProjectLibrary.Models
@model RequestEntity

<h2>Удаление заявки</h2>

<h3>Вы уверены, что хотите удалить эту заявку?</h3>
<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Краткое описание
        </dt>
        <dd class="col-sm-10">
            @Model.ShortDescription
        </dd>
        <dt class="col-sm-2">
            Дата подачи
        </dt>
        <dd class="col-sm-10">
            @Model.SubmissionDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Статус
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Активная" : "Выполнена")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
