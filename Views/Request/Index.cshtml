@using ProjectLibrary.Models
@model IEnumerable<RequestEntity>

<h2>Список заявок</h2>

<table class="table">
    <thead>
        <tr>
            <th>Краткое описание</th>
            <th>Дата подачи</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.ShortDescription</td>
                <td>@request.SubmissionDate.ToShortDateString()</td>
                <td>@(request.IsActive ? "Активная" : "Выполнена")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@request.Id">Детали</a> |
                    <a asp-action="Edit" asp-route-id="@request.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@request.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Создать новую заявку</a>
